set editing-mode emacs
set keymap emacs-standard

$include /etc/inputrc

set input-meta on
set output-meta on
set convert-meta off
set expand-tilde on
set mark-directories on
set mark-symlinked-directories on
set page-completions on
set skip-completed-text on
set visible-stats on
set show-all-if-ambiguous off
set show-all-if-unmodified off
set completion-prefix-display-length 0
set bell-style none

# Example of how to change keybindings (will affect all programs that link
# against readline): change clear-screen from C-l to C-x C-l (unbind the
# former, bind the latter)
#
# "\C-l":
# "\C-x\C-l": clear-screen
