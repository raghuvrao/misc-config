$include /etc/inputrc

set expand-tilde on
set mark-symlinked-directories on
set show-all-if-ambiguous off
set show-all-if-unmodified on
set skip-completed-text on
set visible-stats on

set keymap vi-insert
"\C-l": clear-screen
"\C-_": yank-last-arg
"\C-/": yank-last-arg

set keymap vi-command
"o": re-read-init-file
"\C-_": yank-last-arg
"\C-/": yank-last-arg
