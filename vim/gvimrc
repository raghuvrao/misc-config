" ~/.gvimrc ~/.vim/gvimrc
" Author: Raghu V. Rao <raghu.v.rao@gmail.com>

set mouse=a

" Use native/non-GUI tab line.
set guioptions-=e

" Horizontal and right scroll bars always on.  Horizontal scrollbar thumb
" sizes applies to cursor-line only, and not longest line in view.  Left
" scrollbars always off.
set guioptions+=b guioptions+=R guioptions+=r
set guioptions+=h
set guioptions-=L guioptions-=l

" Exclude toolbar.
set guioptions-=T

" Console dialogs instead of pop-up dialogs for simple questions.
set guioptions+=c
