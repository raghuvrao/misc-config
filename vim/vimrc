    nnoremap <Leader>y <Cmd>%write !xsel -ib 2>/dev/null<CR>
    xnoremap <silent> <Leader>y <Cmd>write !xsel -ib 2>/dev/null<CR>
    nnoremap <Leader>p <Cmd>read !xsel -ob 2>/dev/null<CR>
endif

