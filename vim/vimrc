if !has('gui_running')
    set mouse=
    " Do not meddle with the terminal's cursor.
    set t_ve=
    set t_vi=
    set t_vs=
    set t_VS=
    set t_SI=
    set t_SR=
    set t_EI=
    set t_SC=
    set t_EC=
    set t_SH=
    set t_RC=
    set t_RS=
    if &term =~# '^\%(screen\|tmux\)'
        " :help xterm-mouse, :help sgr-mouse
        set ttymouse=sgr
        " :help arrow_modifiers
        execute "set <xUp>=\<Esc>[@;*A"
        execute "set <xDown>=\<Esc>[@;*B"
        execute "set <xRight>=\<Esc>[@;*C"
        execute "set <xLeft>=\<Esc>[@;*D"
        " :help xterm-bracketed-paste
        let &t_BD = "\<Esc>[?2004l"
        let &t_BE = "\<Esc>[?2004h"
        let &t_PS = "\<Esc>[200~"
        let &t_PE = "\<Esc>[201~"
    endif
endif

